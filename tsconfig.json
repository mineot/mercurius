{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "Node",
    "strict": true,
    "jsx": "preserve",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "baseUrl": ".",
    "paths": {
      "@component/*": ["resources/core/components/*"],
      "@widget/*": ["resources/core/components/widgets/*"],
      "@script/*": ["resources/core/scripts/*"],
      "@store/*": ["resources/core/scripts/stores/*"],
      "@sass/*": ["resources/core/sass/*"],
      "@page/*": ["resources/pages/*"],
      "@module/*": ["node_modules/*"]
    }
  },
  "include": ["resources/**/*.ts", "resources/**/*.vue", "vite.config.ts"],
  "exclude": ["node_modules"]
}
